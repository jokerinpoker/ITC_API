{
    "compilerOptions": {
      "target": "es6",             
      "module": "commonjs",         
      "outDir": "./dist",           
      "rootDir": "./src",           
      "esModuleInterop": true,      
      "skipLibCheck": true,          
      "strict": true,              
      "forceConsistentCasingInFileNames": true,  
      "moduleResolution": "node",    
      "resolveJsonModule": true,   
      "isolatedModules": true,      
      "noEmit": false,              
      "skipDefaultLibCheck": true  
    },
    "include": ["src/**/*"],  // 确保包含 src 文件夹下的所有文件
    "exclude": [
      "node_modules" 
    ]
  }